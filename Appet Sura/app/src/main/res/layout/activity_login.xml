<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fasepi.android.appet.usuario.Actividades.LoginActivity"
    >

    <LinearLayout
        android:id="@+id/layout_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login"
        android:visibility="visible"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/portada"
        android:visibility="gone"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:text="Ingresar"
            android:textColor="@color/colorBlanco"
            android:onClick="Ingresar"
            android:background="@drawable/fondo_redondeado_rojo"/>

        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:text="RÉGISTRATE"
            android:onClick="Ingresar"
            android:textColor="@color/colorBlanco"
            android:background="@drawable/fondo_redondeado_rojo"/>


    </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_init_sesion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="@drawable/fondo_portada">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlanco">


                <ImageView
                    android:layout_marginLeft="60dp"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/logo_portada"/>

            </LinearLayout>







            <EditText

                android:id="@+id/edt_nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:hint="Usuario"
                android:textColorHint="@color/colorPrimary"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:background="@drawable/edt_redondeado"
                android:visibility="gone" />

            <EditText

                android:id="@+id/edt_telefono_usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/edt_redondeado"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:hint="Número de Teléfono"
                android:textColorHint="@color/colorPrimaryDark"
                android:inputType="phone"
                android:maxLength="10"
                android:text=""

                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/edt_correo_usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:hint="Correo"
                android:textColorHint="@color/colorPrimaryDark"
                android:background="@drawable/edt_redondeado"
                android:inputType="textEmailAddress"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText

                android:id="@+id/edt_cedula_usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:hint="Número de Cédula"
                android:inputType="number"
                android:maxLength="10"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:visibility="gone"/>

            <EditText

                android:id="@+id/edt_pass_usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:hint="Contraseña"
                android:textColorHint="@color/colorPrimaryDark"
                android:inputType="numberPassword"
                android:maxLength="10"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:background="@drawable/edt_redondeado"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/boton_ingreso"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:onClick="InicioSesion"/>


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/terminos_condiciones"
                android:onClick="Terminos"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/slogan_portada"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
